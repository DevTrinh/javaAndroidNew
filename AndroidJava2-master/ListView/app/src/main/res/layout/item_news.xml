<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="12dp">

    <ImageView
        android:id="@+id/iv_news_item"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHeight_percent="1"
        app:layout_constraintWidth_percent="0.35"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintVertical_bias="0"
        android:src="@drawable/bg_anim_in_intent"
        android:scaleType="centerCrop"/>



    <TextView
        android:id="@+id/tv_news_item"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/tv_content_news"
        app:layout_constraintLeft_toRightOf="@id/iv_news_item"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_percent="0.4"
        android:padding="12dp"
        android:text="asdasssssssssssssssssssssssssssssssssssssssss"
        android:textStyle="bold"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/tv_content_news"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_news_item"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/iv_news_item"
        app:layout_constraintBottom_toBottomOf="@+id/iv_news_item"
        app:layout_constraintHeight_percent="0.6"
        android:padding="12dp"
        android:text="fdassssssssssssssssssssssssssssssssssssssssssssssssssssssss"/>

</androidx.constraintlayout.widget.ConstraintLayout>